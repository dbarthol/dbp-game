<table id="rank_table">
	<tr>
		<th>Position</th>
		<th>Namen</th>
		<th>Score</th>
	</tr>
	<% Rank.rank_list(0,10).each do |rank, pos| %>
		<tr>
			<td><%= pos %>.</td>
			<% if rank.user.username == current_user.username %>
				<td><%= link_to current_user.username, profile_index_path %></td>
			<% else %>
				<td><%= link_to rank.user.username, {:controller => "profile", :action => "user", :user => rank.user.username } %></td>
			<% end %>
			<td><%= rank.score %></td>
		</tr>
	<% end %>
</table>
